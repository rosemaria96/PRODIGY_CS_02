from PIL import Image
import numpy as np

def encrypt_image(input_path, output_path, key):
    image = Image.open(input_path)
    image_array = np.array(image)
    
    encrypted_array = (image_array + key) % 256
    encrypted_image = Image.fromarray(encrypted_array.astype('uint8'))
    encrypted_image.save(output_path)
    print(f"Image encrypted and saved as {output_path}")

def decrypt_image(input_path, output_path, key):
    image = Image.open(input_path)
    image_array = np.array(image)
    
    decrypted_array = (image_array - key + 256) % 256
    decrypted_image = Image.fromarray(decrypted_array.astype('uint8'))
    decrypted_image.save(output_path)
    print(f"Image decrypted and saved as {output_path}")

def print_menu():
    print("\nImage Encryption Tool")
    print("1. Encrypt an Image")
    print("2. Decrypt an Image")
    print("3. Exit")
    print("Choose an option: ")

def main():
    while True:
        print_menu()
        choice = int(input())
        
        if choice == 1:
            input_path = input("Enter the path to the image to encrypt: ")
            output_path = input("Enter the output path for the encrypted image: ")
            key = int(input("Enter the encryption key (integer value): "))
            encrypt_image(input_path, output_path, key)
        elif choice == 2:
            input_path = input("Enter the path to the image to decrypt: ")
            output_path = input("Enter the output path for the decrypted image: ")
            key = int(input("Enter the decryption key (integer value): "))
            decrypt_image(input_path, output_path, key)
        elif choice == 3:
            print("Exiting...")
            break
        else:
            print("Invalid choice! Please try again.")

if __name__ == "__main__":
    main()
